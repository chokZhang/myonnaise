<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--返回按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginTop="7dp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/community_fragment_return"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/return_button"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--头像-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="23dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/head_img"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="JASON"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/publish"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:text="发布"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="13dp"
                    android:textSize="12sp"
                    android:text="66"/>


                <!--收藏-->
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="40dp"
                    android:layout_width="13dp"
                    android:layout_height="12dp"
                    android:src="@drawable/favorites"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:text="收藏"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="13dp"
                    android:textSize="12sp"
                    android:text="66"/>
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

    <!--一条横线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/line_horizontal"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:textColor="@color/white"
            android:text="联系我们"
            android:gravity="center"
            android:textSize="10sp"
            android:drawableTop="@drawable/contact"/>

        <TextView
            android:id="@+id/edit_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="编辑主页"
            android:gravity="center"
            android:textSize="10sp"
            android:drawableTop="@drawable/edit_page"/>
    </LinearLayout>

    <!--主要信息体-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/community_fragment_rv"
            tools:listitem="@layout/community_vedio_item"
            android:overScrollMode="never"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>